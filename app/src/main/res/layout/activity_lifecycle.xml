<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chapter3.lifecycle.LifecycleActivity">

    <Button
        android:id="@+id/normalActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/to_normal_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/dialogActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/to_dialog_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normalActivity"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>